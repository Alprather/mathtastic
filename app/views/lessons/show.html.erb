<p id="notice"><%= notice %></p>
<div class="pull-right">
<%= link_to 'Back', lessons_path %>
</div>
<h2>
  <%= @lesson.title %>
  <h4><%= render partial: 'votes/voter', locals: { lesson: @lesson } %></h4>

</h2>
<br>
<br>


<p>
  <strong>Subject:</strong>
  <%= @lesson.subject %>
</p>

<p>
  <strong>Grade:</strong>
  <%= @lesson.grade %>
</p>

<p>
  <strong>Description:</strong>
  <%= @lesson.description %>
</p>

<br>



<iframe src="<%= @lesson.lesson_file %>"width="1000" height="700"></iframe>
<br>
 <% if current_user && current_user.admin? %>
<td><%= link_to 'Edit', edit_lesson_path(@lesson) %></td>
<td><%= link_to 'Delete', @lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
